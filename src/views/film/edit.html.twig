{# templates/film/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier/Supprimer un film{% endblock %}

{% block content %}
    <h2 class="mb-4">
        <i class="fas fa-edit" aria-hidden="true"></i> Modifier/Supprimer un film
    </h2>

    <form method="POST" action="/film/searchByID" class="mb-4">
        <div class="form-group">
            <label for="filmId">Rechercher un film par ID</label>
            <input type="number" id="filmId" name="filmId" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-primary">Rechercher</button>
    </form>

    {% if film is defined %}
        <h3 class="mb-4">Modifier le film : {{ film.title }}</h3>

        <form method="POST" action="/film/edit">
            <input type="hidden" name="id" value="{{ film.id }}">
            <div class="form-group">
                <label for="title">Titre</label>
                <input type="text" id="title" name="title" class="form-control" value="{{ film.title }}" required>
            </div>
            <div class="form-group">
                <label for="year">Année</label>
                <input type="text" id="year" name="year" class="form-control" value="{{ film.year }}">
            </div>
            <div class="form-group">
                <label for="type">Type</label>
                <input type="text" id="type" name="type" class="form-control" value="{{ film.type }}" required>
            </div>
            <div class="form-group">
                <label for="director">Réalisateur</label>
                <input type="text" id="director" name="director" class="form-control" value="{{ film.director }}">
            </div>
            <div class="form-group">
                <label for="synopsis">Synopsis</label>
                <textarea id="synopsis" name="synopsis" class="form-control">{{ film.synopsis }}</textarea>
            </div>
            <button type="submit" class="btn btn-success">Valider les modifications</button>
        </form>

        <form method="POST" action="/film/delete" class="mt-3">
            <input type="hidden" name="id" value="{{ film.id }}">
            <button type="submit" class="btn btn-danger">Supprimer ce film</button>
        </form>
    {% endif %}
{% endblock %}