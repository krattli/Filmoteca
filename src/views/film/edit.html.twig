{# templates/film/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Modifier/Supprimer un film{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="card shadow-lg p-4 mb-5 bg-white rounded animate__animated animate__fadeIn">
            <h2 class="mb-4 text-center">
                <i class="fas fa-edit text-primary"></i> Modifier/Supprimer un film
            </h2>

            <form method="POST" action="/film/searchByID" class="mb-4">
                <div class="form-group mb-3">
                    <label for="filmId" class="form-label">Rechercher un film par ID</label>
                    <input type="number" id="filmId" name="filmId" class="form-control form-control-lg" required>
                </div>
                <button type="submit" class="btn btn-primary btn-lg btn-block">
                    <i class="fas fa-search"></i> Rechercher
                </button>
            </form>

            {% if film is defined %}
                <div class="card mt-4 shadow-sm p-4 bg-light rounded animate__animated animate__fadeInUp">
                    <h3 class="mb-4 text-center">
                        <i class="fas fa-film text-secondary"></i> Modifier le film : {{ film.title }}
                    </h3>

                    <form method="POST" action="/film/edit">
                        <input type="hidden" name="id" value="{{ film.id }}">
                        <div class="form-group mb-3">
                            <label for="title" class="form-label">Titre</label>
                            <input type="text" id="title" name="title" class="form-control form-control-lg" value="{{ film.title }}" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="year" class="form-label">Année</label>
                            <input type="text" id="year" name="year" class="form-control form-control-lg" value="{{ film.year }}">
                        </div>
                        <div class="form-group mb-3">
                            <label for="type" class="form-label">Type</label>
                            <input type="text" id="type" name="type" class="form-control form-control-lg" value="{{ film.type }}" required>
                        </div>
                        <div class="form-group mb-3">
                            <label for="director" class="form-label">Réalisateur</label>
                            <input type="text" id="director" name="director" class="form-control form-control-lg" value="{{ film.director }}">
                        </div>
                        <div class="form-group mb-3">
                            <label for="synopsis" class="form-label">Synopsis</label>
                            <textarea id="synopsis" name="synopsis" class="form-control form-control-lg" rows="5">{{ film.synopsis }}</textarea>
                        </div>
                        <button type="submit" class="btn btn-success btn-lg btn-block">
                            <i class="fas fa-check-circle"></i> Valider les modifications
                        </button>
                    </form>

                    <form method="POST" action="/film/delete" class="mt-3">
                        <input type="hidden" name="id" value="{{ film.id }}">
                        <button type="submit" class="btn btn-danger btn-lg btn-block">
                            <i class="fas fa-trash-alt"></i> Supprimer ce film
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}